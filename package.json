{
  "name": "Drch-Electron",
  "version": "1.0.0",
  "description": "DEMO: https://junauplayer.github.io",
  "main": "main.js",
  "build": {
    "appId": "com.jamzi.quickstart",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=x64 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Drch-Electron\"",
    "package-linux": "electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "create-installer-mac": "electron-installer-dmg ./release-builds/Drch-Electron-darwin-x64/Drch-Electron.app electron-tutorial-app --out=release-builds --overwrite --icon=assets/icons/mac/icon.icns",
    "create-installer-win": "node installers/windows/createinstaller.js"
  },
  "author": "HengiFettlich",
  "license": "ISC",
  "devDependencies": {
    "electron": "^6.0.7",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.0.5",
    "electron-winstaller": "^4.0.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.4.1",
    "ws": "^7.1.2"
  }
}
